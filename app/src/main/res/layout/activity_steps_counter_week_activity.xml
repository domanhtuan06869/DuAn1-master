<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fitnessapi.StepsCounterWeek_activity">


    <LinearLayout

        android:id="@+id/linearLayout8"
        android:layout_width="405dp"
        android:layout_height="56dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="16dp"
        android:background="#2645F7"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="40dp"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/tinhkmtuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km"
                android:textColor="#ffff"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tinhcalotuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:text="kalo "
                android:textColor="#ffff"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="288dp"
        android:layout_height="278dp"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="82dp"
        android:layout_marginRight="82dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_buttom_6"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.672"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tvSobuoctuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:text="0"
            android:textColor="#ffff"
            android:textSize="40dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Bước"
            android:textColor="#ffff"
            android:textSize="40dp"
            android:textStyle="italic" />
        <TextView
            android:onClick="lammoituan"

            android:layout_marginTop="15dp"
            android:background="@drawable/custom_buttom_2"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Làm mới"
            android:textColor="#ffff"
            android:gravity="center_horizontal"
            android:textSize="25dp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="395dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/tvHomnay"
            android:background="#1DC524"
            android:onClick="homnayt"
            android:textColor="#FFFF"
            android:gravity="center_vertical|center_horizontal"
            android:text="Hôm nay"
            android:textSize="35dp"
            android:layout_width="192dp"
            android:layout_height="match_parent" />


        <TextView
            android:id="@+id/tvTuannaytuan"
            android:onClick="tuannaytuan"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="Tuần này"
            android:background="#1B60DA"
            android:textColor="#FFFF"
            android:textSize="35dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>