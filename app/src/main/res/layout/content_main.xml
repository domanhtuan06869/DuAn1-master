<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:paddingTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:onClick="BenhVien"
                android:background="@drawable/custom_buttom_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">
                <ImageView
                    android:background="@drawable/findhosspitail"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />
                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#1632D3"
                    android:gravity="center_horizontal"
                    android:text="Tìm Bệnh Viện"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <LinearLayout
                android:background="@drawable/custom_buttom_7"
                android:onClick="Thuoc"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:background="@drawable/drug"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />
                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#1632D3"
                    android:gravity="center_horizontal"
                    android:text="Danh Mục Thuốc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_buttom_7"
                android:onClick="Socuu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:background="@drawable/socuu"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />
                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#1632D3"
                    android:gravity="center_horizontal"
                    android:text="Sơ Cứu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:onClick="CongDong"
                android:background="@drawable/custom_buttom_7"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:background="@drawable/communityhealth"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />
                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#1632D3"
                    android:gravity="center_horizontal"
                    android:text="Cộng Đồng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>